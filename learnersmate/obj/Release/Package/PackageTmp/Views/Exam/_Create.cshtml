@model learnersmate.Models.Exam
@{
    ViewBag.Title = "Exam Create";
    Layout = null;
    
}
<div class="modal-body">
   @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SchoolID)
    <div class="form-horizontal">
        <div class="form-row">
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control-sm", @type = "text", @placeholder = "Enter Name", @required = true })
                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.SubjectID, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">
                        @Html.DropDownList("SubjectID", null, "Select Subject", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true })
                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Date, "{0:dd-MMM-yyyy}", new { @class = "form-control-sm", @type = "text", @placeholder = "Enter Date", @required = true })
                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.Remarks, new { @class = "control-label col-md-12", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", @type = "text", @placeholder = "Enter Remarks" })
                    </div>
                </div>
            </div>
        </div>       
    </div>
}
</div>
<div class="modal-footer">
    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light float-right">Submit</button>
    <button type="button" class="btn btn-secondary btn-sm  waves-effect waves-light" data-dismiss="modal">Cancel</button>
</div>


