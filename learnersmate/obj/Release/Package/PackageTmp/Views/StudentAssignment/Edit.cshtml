@model learnersmate.Models.StudentAssignment
@{
    ViewBag.Title = "Student Assignment Edit";
    Layout = "~/Views/Shared/_Layouts.cshtml";

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.StudentAssignmentID)   
    <div class="col-lg-6">
        <div class='alert alert-success alert-dismissible' id="AlertSuccess" style='display: -webkit-inline-box;display:none' role='alert'>
            <i class='fa fa-check'></i>
            <strong style='padding-left: 6px;'> @ViewBag.Message </strong>
            <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
        </div>
        <div class='alert alert-danger alert-dismissible' id="AlertError" style='display: -webkit-inline-box;display:none' role='alert'>
            <i class='fa fa-check'></i>
            <strong style='padding-left: 6px;'> @ViewBag.Error </strong>
            <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
        </div>
    </div>
    <span class="text-primary">EDIT STUDENT ASSIGNMENT</span><hr />
    <div class="create-task-block">
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        <span class="control-label col-md-12 asterisk_input" , style="font-weight:bold;font-size: 1.0rem !important;">Class</span>
                        <div class="col-md-10">
                            @Html.DropDownList("TeacherID", (SelectList)ViewBag.Teachers, "Select Teacher", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        @Html.Label("Assigned Date", new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.AssignedDate, "{0:dd-MMM-yyyy}", new { @class = "form-control-sm", @type = "text", @required = true, @placeholder = "Enter Date" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        @Html.Label("End Date", new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.EndDate, "{0:dd-MMM-yyyy}", new { @class = "form-control-sm", @type = "text", @required = true, @placeholder = "Enter Date" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        @Html.Label("Title", new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Title, new { @class = "form-control", @style = "height:10px;", @type = "text", @required = true, @placeholder = "Enter Title" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        @Html.Label("Detail", new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Detail, new { @class = "form-control", @style = "height:150px;", @type = "text", @required = true, @placeholder = "Enter Detail" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        <span class="control-label col-md-12 asterisk_input" , style="font-weight:bold;font-size: 1.0rem !important;">Class</span>
                        <div class="col-md-10">
                            @Html.DropDownList("ClassID", (SelectList)ViewBag.Classes, "Select Class", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        <span class="control-label col-md-12 asterisk_input" , style="font-weight:bold;font-size: 1.0rem !important;">Section</span>
                        <div class="col-md-10">
                            @Html.DropDownList("SectionID", (SelectList)ViewBag.Sections, "Select Section", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true})
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        <span class="control-label col-md-12 asterisk_input" , style="font-weight:bold;font-size: 1.0rem !important;">Subject</span>
                        <div class="col-md-10">
                            @Html.DropDownList("SubjectID", (SelectList)ViewBag.Subjects, "Select Subject", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10"></div>
            <div class="col-md-1">
                <a href="/StudentAssignment/Index" class="btn btn-secondary btn-sm waves-effect waves-light float-right">
                    Cancel
                </a>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light float-right">
                    Submit
                </button>
            </div>
        </div>
    </div>
}
<script>   
    $(function () {
        $("#AssignedDate").datepicker({ dateFormat: 'dd-MM-yy' });
        $("#EndDate").datepicker({ dateFormat: 'dd-MM-yy' });
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#ClassID').change(function () {
            $('#SubjectID').empty();
            $('#SubjectID').append('<option value="0">Select Subject</option>');
            $.ajax({
                type: "POST",
                url: "/Subject/GetSubjectByClass",
                datatype: "Json",
                data: { id: $('#ClassID').val() },
                success: function (data) {
                    $('#SubjectID').empty();
                    $.each(data, function (index, value) {
                        $('#SubjectID').append('<option value="' + value.Value + '">' + value.Text + '</option>');
                    });
                }

            });
        });
    });
</script>