@using Microsoft.AspNet.Identity
@model learnersmate.Models.ManageUserViewModel

<p>You're logged in as <strong>@ViewBag.Email</strong>.</p>
<div class="form-horizontal">
    @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">            
            <div class="col-md-10">
                <div class="col-lg-12">
                    <div class='alert alert-success alert-dismissible' id="AlertSuccess" style='display: -webkit-inline-box;display:none' role='alert'>
                        <i class='fa fa-check'></i>
                        <strong style='padding-left: 6px;'> @ViewBag.Message </strong>
                        <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
                    </div>
                    <div class='alert alert-danger alert-dismissible' id="AlertError" style='display: -webkit-inline-box;display:none' role='alert'>
                        <i class='fa fa-check'></i>
                        <strong style='padding-left: 6px;'> @ViewBag.Error <br /> @Html.ValidationSummary()</strong>
                        <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control-sm", @type = "password", @placeholder = "Enter Current Password", @required = true })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control-sm", @type = "password", @placeholder = "Enter New Password", @required = true })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control-sm", @type = "password", @placeholder = "Enter Confirm New Password", @required = true })
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-11"></div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light float-right">
                    Submit
                </button>
            </div>
        </div>}
</div>
<hr/>