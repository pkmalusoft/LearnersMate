@model learnersmate.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}
<div class="modal-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-row">
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-12  asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control-sm", @type = "email", @placeholder = "Enter Email", @required = true })
                        </div>
                    </div>
                </div>               
            </div>
        </div>
    }
</div>
<div class="modal-footer">
    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light float-right">Submit</button>
    <button type="button" class="btn btn-secondary btn-sm  waves-effect waves-light" data-dismiss="modal">Cancel</button>
</div>


