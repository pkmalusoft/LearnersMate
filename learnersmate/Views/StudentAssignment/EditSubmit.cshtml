@model learnersmate.Models.StudentAssignmentSubmission
@{
    ViewBag.Title = "Student Assignment Submission Edit";
    Layout = "~/Views/Shared/_Layouts.cshtml";

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.StudentAssignmentSubmissionID)
    @Html.HiddenFor(model => model.StudentAssignmentID)
   <input type="hidden" id="existing" name="existing" value="@ViewBag.Existing"/>
    <div class="col-lg-6">
        <div class='alert alert-success alert-dismissible' id="AlertSuccess" style='display: -webkit-inline-box;display:none' role='alert'>
            <i class='fa fa-check'></i>
            <strong style='padding-left: 6px;'> @ViewBag.Message </strong>
            <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
        </div>
        <div class='alert alert-danger alert-dismissible' id="AlertError" style='display: -webkit-inline-box;display:none' role='alert'>
            <i class='fa fa-check'></i>
            <strong style='padding-left: 6px;'> @ViewBag.Error </strong>
            <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
        </div>
    </div>
    <span class="text-primary">EDIT STUDENT ASSIGNMENT SUBMISSION</span><hr />
    <div class="create-task-block">
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        <span class="control-label col-md-12 asterisk_input" , style="font-weight:bold;font-size: 1.0rem !important;">Class</span>
                        <div class="col-md-10">
                            @Html.DropDownList("StudentID", (SelectList)ViewBag.Students, "Select Student", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        @Html.Label("Submitted Date", new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.SubmittedDate, "{0:dd-MMM-yyyy}", new { @class = "form-control-sm", @type = "text", @required = true, @placeholder = "Enter Date" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <div class="form-group">
                        @Html.Label("Remarks", new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", @style = "height:150px;", @type = "text", @required = true, @placeholder = "Enter Remarks" })
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <hr />
        <div class="row">
            <div class="col-md-10"></div>
            <div class="col-md-1">
                <a href="/StudentAssignment/IndexSubmit/@Model.StudentAssignmentID" class="btn btn-secondary btn-sm waves-effect waves-light float-right">
                    Cancel
                </a>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light float-right">
                    Submit
                </button>
            </div>
        </div>
    </div>
}
<script>
  
    $(function () {
        $("#SubmittedDate").datepicker({ dateFormat: 'dd-MM-yy' });
    });
</script>