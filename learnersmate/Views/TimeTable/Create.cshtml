@model learnersmate.Models.TimeTable
@{
    ViewBag.Title = "Time Table Create";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SchoolID)
    <div class="form-horizontal">
        <div class="col-lg-6">
            <div class='alert alert-success alert-dismissible' id="AlertSuccess" style='display: -webkit-inline-box;display:none' role='alert'>
                <i class='fa fa-check'></i>
                <strong style='padding-left: 6px;'>@ViewBag.Message</strong>
                <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
            </div>
            <div class='alert alert-danger alert-dismissible' id="AlertError" style='display: -webkit-inline-box;display:none' role='alert'>
                <i class='fa fa-check'></i>
                <strong style='padding-left: 6px;'>@ViewBag.Error</strong>
                <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.ClassID, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">
                        @Html.DropDownList("ClassID", null, "Select Class", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true })

                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.SectionID, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">
                        @Html.DropDownList("SectionID", null, "Select Section", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true })

                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.PeriodID, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">
                        @Html.DropDownList("PeriodID", null, "Select Period", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true })

                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.Label("Time", new { @class = "control-label col-md-12", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">

                        <input type="text" id="Time" value="" class="form-control-sm" disabled>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.SubjectID, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">
                        @Html.DropDownList("SubjectID", null, "Select Subject", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true })

                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.TeacherID, new { @class = "control-label col-md-12 asterisk_input", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">
                        @Html.DropDownList("TeacherID", null, "Select Teacher", new { @class = "form-control-sm custom-select", @style = "height:2.0rem !important;", @required = true })

                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.isClassTeacher, new { @class = "control-label col-md-12", @style = "font-weight:bold;font-size: 1.0rem !important;" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.isClassTeacher)
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10"></div>
            <div class="col-md-1">
                <a href="/TimeTable/Index" class="btn btn-secondary btn-sm waves-effect waves-light float-right">
                    Cancel
                </a>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light float-right">
                    Submit
                </button>
            </div>
        </div>
    </div>
}
    <script type="text/javascript">
    $(document).ready(function () {
        $('#ClassID').change(function () {          
            window.location.href = "/TimeTable/Create/" + $('#ClassID').val();
        });
    });
    </script>