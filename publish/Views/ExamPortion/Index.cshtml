@model IEnumerable<learnersmate.Models.ExamPortion>
@{
    ViewBag.Title = "Exam Portion Create";
    Layout = null;
    int roleid = Convert.ToInt16(Session["RoleID"].ToString());
}
<div>
    <div class="col-lg-12">
        <a href="javascript: void(0)" onclick="popup('/ExamPortion/Create/@ViewBag.ExamID')"  class="btn btn-primary btn-sm waves-effect waves-light float-right" title="Add Portion">Add Portion</a>
    </div>
    <table>
        <thead class="thead-light">
            <tr>
                <th>
                    Chapter
                </th>
                <th>
                    Topic
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td style="width:30%">
                        
                        @Html.DisplayFor(modelItem => item.CurrentChapter.Name)
                    </td>
                    <td style="width:60%">
                        @Html.DisplayFor(modelItem => item.CurrentTopic.Name)
                    </td>
                    <td style="width: 10%; text-align-last: right">
                        @if (roleid == 1 || roleid == 2 || roleid == 3)
                        {
                            <a href="/ExamPortion/Edit/@item.ExamPortionID" class="darkblue" title="Edit"> <i class="fa fa-edit" style="font-size: 17px; color: blue"></i></a>
                            <a href="/ExamPortion/DeleteConfirm/@item.ExamPortionID" class="lightred" title="Delete" onclick="return ConfirmDelete('ExamPortion',@item.ExamPortionID);">  <i class="fa fa-trash-o" style="font-size: 17px; color: red; "></i></a>
                        }
                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>