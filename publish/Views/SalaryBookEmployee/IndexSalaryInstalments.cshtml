@model IEnumerable<learnersmate.Models.SalaryBookEmployee>
@{
    ViewBag.Title = "Employee Salary Payments";
    Layout = null;
    int roleid = Convert.ToInt16(Session["RoleID"].ToString());
}
<div>
    <div class="col-lg-12">
        <a href="javascript: void(0)" onclick="popup('/SalaryBookEmployee/Create/@ViewBag.EmployeeID')" class="btn btn-primary btn-sm waves-effect waves-light float-right" title="Add Instalment">Add Payments</a>
    </div>
    <table>
        <thead class="thead-light">
            <tr>
                <th>
                    Payments
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Date Paid
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

            <tr>
                <td style="width:50">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td style="width:20%">
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td style="width:20%">
                    @Html.DisplayFor(modelItem => item.Dop)
                </td>
                <td style="width: 10%; text-align-last: right">
                    @if (roleid == 1 || roleid == 2)
                    {
                        <a href="/SalaryBookEmployee/Edit/@item.SalaryBookID" class="darkblue" title="Edit"> <i class="fa fa-edit" style="font-size: 17px; color: blue"></i></a>
                        <a href="/SalaryBookEmployee/DeleteConfirm/@item.SalaryBookID" class="lightred" title="Delete" onclick="return ConfirmDelete('SalaryBookEmployee',@item.SalaryBookID);">  <i class="fa fa-trash-o" style="font-size: 17px; color: red; "></i></a>
                    }
                </td>
            </tr>

            }
        </tbody>
    </table>

</div>