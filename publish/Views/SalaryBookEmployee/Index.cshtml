@model IEnumerable<learnersmate.Models.Employee>
@{
    ViewBag.Title = "Employee Salary Book";
    Layout = "~/Views/Shared/_Layouts.cshtml";
    int roleid = Convert.ToInt16(Session["RoleID"].ToString());
}
<div>
    <div class="col-lg-6">
        <div class='alert alert-success alert-dismissible' id="AlertSuccess" style='display: -webkit-inline-box;display:none' role='alert'>
            <i class='fa fa-check'></i>
            <strong style='padding-left: 6px;'>@ViewBag.Message</strong>
            <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
        </div>
        <div class='alert alert-danger alert-dismissible' id="AlertError" style='display: -webkit-inline-box;display:none' role='alert'>
            <i class='fa fa-check'></i>
            <strong style='padding-left: 6px;'>@ViewBag.Error</strong>
            <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
        </div>
    </div>
    <div class="col-lg-12">
        <a class="btn btn-primary btn-sm waves-effect waves-light float-left" href="/SalaryBook/Index">
            << Salary Book Home
        </a>
    </div>
    <table class="table table-datatable table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    Employee Name / Salary
                </th>
                <th>
                    Payment Details
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td style="width:20%">
                        @Html.DisplayFor(modelItem => item.Name) <br />
                        @Html.DisplayFor(modelItem => item.Salary)

                    </td>

                    <td style="width:80%">
                        @Html.Action("IndexSalaryInstalments", "SalaryBookEmployee", new { id = item.EmployeeID })
                    </td>

                </tr>

            }
        </tbody>
    </table>
</div>