@model IEnumerable<learnersmate.Models.Currency>
@{
    ViewBag.Title = "Currency";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}
<div>
    <div class="col-lg-6">
        <div class='alert alert-success alert-dismissible' id="AlertSuccess" style='display: -webkit-inline-box;display:none' role='alert'>
            <i class='fa fa-check'></i>
            <strong style='padding-left: 6px;'>@ViewBag.Message</strong>
            <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
        </div>
        <div class='alert alert-danger alert-dismissible' id="AlertError" style='display: -webkit-inline-box;display:none' role='alert'>
            <i class='fa fa-check'></i>
            <strong style='padding-left: 6px;'>@ViewBag.Error</strong>
            <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span> </button>
        </div>
    </div>
    <div class="col-lg-12">
        <button type="button" class="btn btn-primary btn-sm waves-effect waves-light float-right" data-toggle="modal" data-target="#modalCreate">Create</button>
    </div>
    <table id="datatable-1" class="table table-datatable table-striped table-hover">
        <thead class="thead-light">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CountryID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Symbol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NoOfDecimals)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MonetaryUnit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusBaseCurrency)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExchangeRate)
                </th>
                <th></th>
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentCountry.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Symbol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoOfDecimals)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonetaryUnit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusBaseCurrency)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExchangeRate)
                    </td>
                    <td style="width: 10%; text-align-last: right">
                        <a href="/Currency/Edit/@item.CurrencyID" class="darkblue" title="Edit"> <i class="fa fa-edit" style="font-size: 17px; color: blue"></i></a>
                        <a href="/Currency/DeleteConfirm/@item.CurrencyID" class="lightred" title="Delete" onclick="return ConfirmDelete('Currency',@item.CurrencyID);">  <i class="fa fa-trash-o" style="font-size: 17px; color: red; "></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@using (Ajax.BeginForm("_Create", "Currency", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onsuccesspopup2", OnFailure = "onfailurepopup2" }))
{
    <div>
        <div class="modal fade" id="modalCreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><b>Create @ViewBag.Title</b></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @Html.Action("_Create")
                    </div>
                </div>
            </div>
        </div>
    </div>
}


